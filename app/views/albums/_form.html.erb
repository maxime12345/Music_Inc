<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="form">
      <%= simple_form_for @album do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :author %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

