<div class="container index">
  <h1>MUSIC INC.</h1>
  <%= render 'shared/form-search' %>
  <div class="row">
    <% @albums.each do |album| %>
      <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
        <%= render 'shared/card', album: album  %>
      </div>
    <% end %>
    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
      <%= link_to(new_album_path) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://res.cloudinary.com/maxime/image/upload/v1536237653/MusicIncTest/Album_cover/688550958-612x612.jpg);">
          <h4 class="text-hidden"><%= t('.add') %></h4>
        </div>
      <% end %>
    </div>
  </div>
  <%= will_paginate @albums %></div>
</div>
